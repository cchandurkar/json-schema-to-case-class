{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "lib",
    "noEmit": false,
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "lodash",
      "mocha"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es5", 
      "dom"
    ],
    "module": "es2015",
    "target": "ES2015"
  },
  "include": [
    "src/**/*"
  ],
}
